@model Vehicle

@{
    ViewData["Title"] = "Checkout";
}

<h1>Checkout</h1>

<h3>Are you sure you want to checkout vehicle?</h3>
<div>
    <h4>Vehicle</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LicenseNr)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LicenseNr)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Wheels)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Wheels)
        </dd>
    </dl>
    
    <form asp-action="Checkout">
        <input type="submit" value="Checkout" class="btn btn-primary" /> |
        <a asp-action="Receipt" asp-controller="Receipt" asp-route-id="@Model?.VehicleId">Receipt</a>
        <a controller="Person" asp-action="Index">Back to List</a>
    </form>
</div>
